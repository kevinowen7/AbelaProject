        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="page-header">
              <h3 class="page-title"> Tenant Page </h3>
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item"><a href="/tenant">Tenant</a></li>
                </ol>
              </nav>
            </div>
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">List Tenant</h4>
                    </p>
                    <table id="tenantList" class="table table-striped">
                      <thead>
                        <tr>
                          <th> Tenant Id </th>
                          <th> Name </th>
                          <th> Tenant Name </th>
                          <th> Street Name </th>
                          <th> Phone Number </th>
                          <th> Status </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for (var i = 0; i < tenant.length; i++) { %>
                          <tr>
                            <td><%= tenant[i].tenant_id %></td>
                            <td><%= tenant[i].name %></td>
                            <td><%= tenant[i].tenant_name %></td>
                            <td><%= tenant[i].street_name %></td>
                            <td><%= tenant[i].tenant_phone_number %></td>
                            <% if(tenant[i].status==1) { %>
                              <td><a href='javascript:void(0)'><i class='menu-icon mdi mdi-checkbox-blank-circle' style='font-size:30px;color:green' ondblclick=changeAttach(<%= tenant[i].tenant_id %>,0) ></i></a></td>
                            <% } else {%>
                              <td><a href='javascript:void(0)'><i class='menu-icon mdi mdi-checkbox-blank-circle' style='font-size:30px;color:red' ondblclick=changeAttach(<%= tenant[i].tenant_id %>,1) ></i></a></td>
                            <% } %>
                          </tr>
                      <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:partials/_footer.html -->
